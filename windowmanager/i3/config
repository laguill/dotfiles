# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod1+Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Hack Nerd Font 11
# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
# set $refresh_i3status killall -SIGUSR1 i3status
# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
# bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
# bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

focus_follows_mouse no



# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
# bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
# bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 6%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 6%-

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous






# kill focused window

# start dmenu (a program launcher)
bindsym $mod+e exec --no-startup-id dmenu_run
# A more modern dmenu replacement is rofi:
# bindcode $mod+40 exec "rofi -modi drun,run -show drun"
# There also is i3-dmenu-desktop which only displays applications shipping a
# .desktop file. It is a wrapper around dmenu, so you need that installed.
# bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1 "
set $ws2 "2 "
set $ws3 "3 "
set $ws4 "4 "
set $ws5 "5 󰨞"
set $ws6 "6 "
set $ws7 "7 󰭹"
set $ws8 "8 󰇰"
set $ws9 "9 󰎈"

# Focus

# window
bindsym $mod+h      focus left
bindsym $mod+Left   focus left
bindsym $mod+t      focus up
bindsym $mod+Up     focus up
bindsym $mod+n      focus down
bindsym $mod+Down   focus down
bindsym $mod+s      focus right
bindsym $mod+Right  focus right

# workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# monitor
bindsym $mod+g output left 
bindsym $mod+l output right 

# focus child window/container
bindsym $mod+a focus child
# focus parent container
bindsym $mod+Shift+a focus parent

# toggle focus between tiling / floating
bindsym $mod+Shift+b focus mode_toggle


# Move

# window/container (inside workspace) 
bindsym $mod+Shift+h     move left
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+t     move up
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+n     move down
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+s     move right
bindsym $mod+Shift+Right move right

# (window/container) to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9

# (workspace) to monitor
bindsym $mod+Shift+g move workspace to output left; output left
bindsym $mod+Shift+l move workspace to output right; output right 


# close
bindsym $mod+w kill


# Size

# width
bindsym $mod+bracketleft resize shrink width 10 px or 10 ppt
bindsym $mod+bracketright resize grow width 10 px or 10 ppt

# height
bindsym $mod+Shift+bracketleft resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+bracketright resize grow height 10 px or 10 ppt
bindsym $mod+braceleft resize shrink height 10 px or 10 ppt
bindsym $mod+braceright resize grow height 10 px or 10 ppt


# Layout 

# toggle float/tiling
bindsym $mod+b floating toggle

# toggle maximize
bindsym $mod+m fullscreen toggle

# split 
bindsym $mod+z layout toggle split
# stack
bindsym $mod+Shift+z layout stacking
# where to position next window
bindsym $mod+v split h
bindsym $mod+Shift+v split v
# decision: never use tabbed; just use stacking (= almost identical)
# bindsym $mod+comma layout tabbed


# # Appearance

# gaps
# . inner gaps for all windows: space between two adjacent windows (or split containers).
gaps inner 10
# . outer gaps for all windows: space along the screen edges.
gaps outer 10
# . inverse_outer only enables outer gaps when there is exactly one window or split container on the workspace.
smart_gaps inverse_outer
# . toggle on the fly
bindsym $mod+j gaps inner current toggle 10


# i3 management

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+semicolon restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+semicolon exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


# Non-window-management shortcuts

# terminal
bindsym $mod+Return exec i3-sensible-terminal

# screenshot 
# . to clipboard
# TODO: this is not to clipboard
bindsym --release $mod+y exec --no-startup-id import /tmp/latest-screenshot.png
# . to editor
# TODO

# various other apps under new namespace
bindsym $mod+p mode "launch"
mode "launch" {
        # These bindings trigger as soon as you enter this mode
        bindsym f exec firefox; mode "default"
}

# lock the machine
bindsym $mod+apostrophe exec i3lock

# change keyboard layout (must be keys that are same on all layouts)
bindsym $mod+Escape exec setxkbmap us
bindsym $mod+Shift+Escape exec setxkbmap dvorak


# Force windows to spaces (use `xprop` to find class)

# spotify
exec spotify
assign [class="Spotify"] $ws9



# Other stuff



# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
# bar {
#     # status_command ~/.local/bin/bumblebee-status \
#         -m nic cpu disk memory layout battery bluetooth2 datetime \
#         -p memory.warning=40 \
#         -t iceberg
#     # status_command i3status --config ~/.config/i3/i3status.conf
#     position top
#     font pango: Hack Nerd Font
# }

exec_always --no-startup-id $HOME/.config/polybar/launch.sh
