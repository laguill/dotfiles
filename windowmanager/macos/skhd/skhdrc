# --- Unified shortcuts


# Focus

# window
alt + cmd - h :     yabai -m window --focus west
alt + cmd - t :     yabai -m window --focus north
alt + cmd - n :     yabai -m window --focus south
alt + cmd - s :     yabai -m window --focus east
alt + cmd - d :     yabai -m window --focus largest
# alt + cmd - left :  yabai -m window --focus west
# alt + cmd - up :    yabai -m window --focus north
# alt + cmd - down :  yabai -m window --focus south
# alt + cmd - right : yabai -m window --focus east

# space
# [change -k to -kp if yabai is not working on this macos version]
alt + cmd - 1 :     yabpy -n focus-space -kp 1
alt + cmd - 2 :     yabpy -n focus-space -kp 2
alt + cmd - 3 :     yabpy -n focus-space -kp 3
alt + cmd - 4 :     yabpy -n focus-space -kp 4
alt + cmd - 5 :     yabpy -n focus-space -kp 5
alt + cmd - 6 :     yabpy -n focus-space -kp 6
alt + cmd - 7 :     yabpy -n focus-space -kp 7
alt + cmd - 8 :     yabpy -n focus-space -kp 8
alt + cmd - 9 :     yabpy -n focus-space -kp 9
    
# monitor
alt + cmd - g : yabai -m display --focus west
alt + cmd - l : yabai -m display --focus east

# toggle focus between tiling / floating
# TODO


# Move

# window (inside space)
alt + cmd + shift - h :     yabai -m window --swap west
alt + cmd + shift - t :     yabai -m window --swap north
alt + cmd + shift - n :     yabai -m window --swap south
alt + cmd + shift - s :     yabai -m window --swap east
alt + cmd + shift - d :     yabai -m window --swap largest
# alt + cmd + shift - left :  yabai -m window --swap west
# alt + cmd + shift - up :    yabai -m window --swap north
# alt + cmd + shift - down :  yabai -m window --swap south
# alt + cmd + shift - right : yabai -m window --swap east

# (window) to space
alt + cmd + shift - 1 :     yabpy -n window-to-space -k 1 ; sketchybar --trigger space_focus windows_on_spaces
alt + cmd + shift - 2 :     yabpy -n window-to-space -k 2 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 3 :     yabpy -n window-to-space -k 3 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 4 :     yabpy -n window-to-space -k 4 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 5 :     yabpy -n window-to-space -k 5 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 6 :     yabpy -n window-to-space -k 6 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 7 :     yabpy -n window-to-space -k 7 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 8 :     yabpy -n window-to-space -k 8 ; sketchybar --trigger windows_on_spaces
alt + cmd + shift - 9 :     yabpy -n window-to-space -k 9 ; sketchybar --trigger windows_on_spaces

# (space) to monitor
alt + cmd + shift - g : \
    yabpy space-to-display west
alt + cmd + shift - l : \
    yabpy space-to-display east


# Close

alt + cmd - w : \
    yabai -m window --close


# Size

# width
alt + cmd - right : \
    yabai -m window --resize bottom_right:30:0; \
    yabai -m window --resize top_left:-30:0
alt + cmd - left : \
    yabai -m window --resize bottom_right:-30:0; \
    yabai -m window --resize top_left:30:0 
#TODO: add [ and ]
# height
alt + cmd - down : \
    yabai -m window --resize bottom_right:0:30; \
    yabai -m window --resize top_left:0:-30
alt + cmd - up : \
    yabai -m window --resize bottom_right:0:-30; \
    yabai -m window --resize top_left:0:30 
#TODO: add { and }
# balance
alt + cmd - 0 : \
    yabai -m space --balance


# Layout

# toggle float/tiling
# (half-width half-height middle-of-screen)
alt + cmd - b : \
    yabai -m window --toggle float --grid 4:4:1:1:2:2; \
    sketchybar --trigger window_focus
    
# toggle maximize
alt + cmd - m : \
    yabai -m window --toggle zoom-fullscreen; \
    sketchybar --trigger window_focus

# where to position new window
alt + cmd - v : \
    yabai -m window --insert south
alt + cmd + shift - v : \
    yabai -m window --insert east

# Create 3 colums with center one the biggest
# TODO



# Appearance

# toggle gap between windows
alt + cmd - j : \
    yabai -m space --toggle gap --toggle padding 


# Yabai management

# start
alt + cmd - f3 : \
    /usr/bin/env osascript <<< "display notification \"(Re)starting Yabai\" with title \"Yabai\""; \
    yabai --stop-service; \
    yabai --start-service; \
    /usr/bin/env osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'

# stop
alt + cmd - f4 : \
    /usr/bin/env osascript <<< \ "display notification \"Stopping Yabai\" with title \"Yabai\""; \
    yabai --stop-service; 




# Non-window-management shortcuts

# terminal
alt + cmd - return : \
    open -n /Applications/Alacritty.app

# screenshot
# . directly to clipboard
alt + cmd - y : \
    screencapture -coi # press space to toggle between rectangle selection and window
# . to editor
# TODO

# lock the machine
alt + cmd - f5 : \
    pmset displaysleepnow

