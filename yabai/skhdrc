# Yabai management

# start (0x29 = ;)
alt + ctrl + cmd - 0x06 : \
    /usr/bin/env osascript <<< "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    yabai --start-service; \
    /usr/bin/env osascript -e 'tell application id "tracesOf.Uebersicht" to refresh'

# stop
alt + ctrl + cmd + shift - 0x06 : \
    /usr/bin/env osascript <<< \ "display notification \"Stopping Yabai\" with title \"Yabai\""; \
    yabai --stop-service; 




# Non-window-management shortcuts

# Terminal
alt + ctrl + cmd - return : \
    alacritty

# Screenshot;
alt + ctrl + cmd - j : \
    screencapture -coW

# test
alt + ctrl + cmd - a  : \
    /usr/bin/env osascript <<< "display notification \"test\" with title \"testtets\""





